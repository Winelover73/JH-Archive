<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center form-label">自己紹介文の編集</h1>
    <div class="offset-3 col-6">
        <form action="/updateIntroduction/<%= user._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="text">記入例：〇〇年卒 就職or院進 等</label>
                <textarea class="form-control" type="text" name="user[introduction]" id="text" required><%= user.introduction %></textarea>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">更新する</button>
            </div>
        </form>
        <a href="/profile/<%= user._id %>">プロフィールに戻る</a>
    </div>
</div>
