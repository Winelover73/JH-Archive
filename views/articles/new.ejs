<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">記事の新規投稿</h1>
        <div class="offset-3 col-6">
            <form action="/articles" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">タイトル</label>
                    <input class="form-control" type="text" name="article[title]" id="title" required>
                    <div class="valid-feedback">
                        OK!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="text">本文</label>
                    <textarea class="form-control" type="text" name="article[text]" id="text" required></textarea>
                    <div class="valid-feedback">
                        OK!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success btn-secondary">投稿する</button>
                </div>
            </form>
            <% if(profileRedirectUrl){ %>
            <a href="<%= profileRedirectUrl %>">プロフィールに戻る</a>
            <% } else { %>
            <a href="/articles">一覧へ戻る</a>
            <% } %>
        </div>
    </div>

    